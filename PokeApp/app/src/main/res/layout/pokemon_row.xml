<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="20dp"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/poke4" />

        <ImageView
            android:id="@+id/imgpokemon"
            android:layout_width="131dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pokemon"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="25dp" />

        <TextView
            android:id="@+id/nombrepokemon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/imgpokemon"
            android:layout_toEndOf="@+id/imgpokemon"
            android:padding="10dp"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/pokebola"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/nombrepokemon"
            android:layout_marginStart="79dp"
            android:layout_marginTop="16dp"
            android:layout_toEndOf="@+id/imgpokemon"
            android:adjustViewBounds="true"
            android:background="#ffffff"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/pokebola" />

    </RelativeLayout>

</android.support.v7.widget.CardView>